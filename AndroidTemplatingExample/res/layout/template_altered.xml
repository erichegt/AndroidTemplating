<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <LinearLayout 
        android:layout_width="40dp"
        android:layout_height="fill_parent"
        android:background="#FFF333"
        android:layout_alignParentLeft="true"
		android:id="@+id/layout_bar_1">
		
        <TextView
            android:text="A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            />
    </LinearLayout>
    
    <ScrollView 
        android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:id="@+id/replace_here"
		android:layout_toRightOf="@+id/layout_bar_1"
		android:layout_toLeftOf="@+id/layout_bar_2"
        />    
        
    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="fill_parent"
        android:background="#00E052"
        android:layout_alignParentRight="true"
        android:id="@+id/layout_bar_2"
		>
		
        <TextView
            android:text="B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            />
    </LinearLayout>
</RelativeLayout>